{
  "manifest_version": 3,
  "name": "Website Cleaner",
  "version": "1.0.0",
  "author": "hishengs@gmail.com",
  "description": "A Chrome Extension for Filter Website Contents",
  "homepage_url": "https://github.com/Hishengs/website-cleaner",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content_script.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": "icon/48.png",
    "default_title": "A Chrome Extension for Filter Website Contents",
    "default_popup": "src/popup.html"
  },
  "default_locale": "en"
}
