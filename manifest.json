{
  "manifest_version": 2,
  "name": "Website Filter",
  "version": "1.0.0",
  "author": "hishengs@gmail.com",
  "description": "A Chrome Extension for Filter Website Contents",
  "homepage_url": "https://github.com/Hishengs/Website-filter",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/libs/lodash.min.js", "src/content_script.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "icon/48.png",
    "default_title": "A Chrome Extension for Filter Website Contents",
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "webRequest",
    "storage",
    "notifications",
    "https://*.github.com/",
    "https://*.githubusercontent.com/"
  ],
  "default_locale": "en"
}
